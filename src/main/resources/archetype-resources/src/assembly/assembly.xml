#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>${symbol_dollar}{project.version}</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>
  <fileSets>
    <!-- Class files -->
    <fileSet>
      <directory>${symbol_dollar}{project.build.outputDirectory}</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <!-- Source code -->
    <fileSet>
      <directory>${symbol_dollar}{project.build.sourceDirectory}</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <!-- appian-plugin.xml, properties files and images -->
    <fileSet>
      <directory>${symbol_dollar}{project.build.resources.resource}</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
    <!-- JAR dependencies -->
    <fileSet>
      <directory>${symbol_dollar}{project.build.directory}/dependency</directory>
      <outputDirectory>META-INF/lib</outputDirectory>
      <excludes>
        <exclude>appian-plug-in-sdk*.jar</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>