#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<appian-plugin name="${symbol_dollar}{project.name}" key="${symbol_dollar}{project.groupId}">
    <plugin-info>
        <description>${symbol_dollar}{project.description}</description>
        <vendor url="${symbol_dollar}{project.url}" />
        <version>${symbol_dollar}{project.version}</version>
    </plugin-info>
    <!-- Functions -->
    <function key="appianFunction" class="${symbol_dollar}{project.groupId}.Function" />
    <!-- Smart Services -->
	<smart-service name="Appian Smart Service" key="appianSmartService" class="${symbol_dollar}{project.groupId}.SmartService" /> 
</appian-plugin>